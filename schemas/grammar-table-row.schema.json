{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://manabi.io/schemas/grammar-table-row.schema.json",
  "title": "Manabi Grammar Table Row Data",
  "type": "object",
  "required": ["jmdictId", "pattern", "examples", "info", "variant"],
  "properties": {
    "jmdictId": { "oneOf": [{ "type": "integer" }, { "type": "string" }] },
    "pattern": {
      "type": "object",
      "required": ["mecab"],
      "properties": { "mecab": { "type": "string" } },
      "additionalProperties": false
    },
    "alternativeForms": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true
    },
    "examples": {
      "type": "array",
      "items": { "type": "string", "format": "uri" }
    },
    "exampleSentences": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["sentence"],
        "properties": {
          "sentence": { "type": "string" },
          "translations": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": { "type": "string" }
          },
          "sourceUrl": { "type": "string", "format": "uri" }
        },
        "additionalProperties": false
      }
    },
    "testData": {
      "type": "object",
      "properties": {
        "nonMatchingSentences": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "variant": {
      "type": "integer",
      "minimum": 1
    },
    "info": {
      "type": "object",
      "description": "Map: reader language code -> section map (‚≠ê entries set recommended: true)",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "Meaning": { "type": "string", "minLength": 1 }
        },
        "patternProperties": {
          "^(?!Meaning$).+$": {
            "oneOf": [
              {
                "type": "array",
                "items": { "$ref": "#/$defs/resource" }
              },
              {
                "type": "object",
                "patternProperties": {
                  "^.+$": {
                    "type": "array",
                    "items": { "$ref": "#/$defs/resource" }
                  }
                },
                "additionalProperties": false
              }
            ]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "$defs": {
    "resource": {
      "type": "object",
      "required": ["url", "name"],
      "properties": {
        "url": { "type": "string", "format": "uri" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "recommended": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
