{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://manabi.io/schemas/grammar-yaml.schema.json",
  "title": "Manabi Grammar YAML",
  "type": "object",
  "required": ["pattern", "examples", "jmdictId"],
  "properties": {
    "jmdictId": {
      "oneOf": [{ "type": "integer" }, { "type": "string", "minLength": 1 }]
    },
    "pattern": {
      "type": "object",
      "required": ["mecab"],
      "properties": { "mecab": { "type": "string", "minLength": 1 } },
      "additionalProperties": false
    },
    "alternativeForms": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true,
      "description": "Optional list of alternative representations of the headword."
    },
    "examples": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "format": "uri",
        "pattern": "#text="
      }
    },
    "exampleSentences": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["sentence"],
        "properties": {
          "sentence": { "type": "string", "minLength": 1 },
          "translations": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": { "type": "string", "minLength": 1 }
          },
          "sourceUrl": { "type": "string", "format": "uri" }
        },
        "additionalProperties": false
      },
      "description": "Example sentences tied to the grammar point with optional translations and sourcing."
    },
    "testData": {
      "type": "object",
      "properties": {
        "nonMatchingSentences": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "additionalProperties": false,
      "description": "Test fixtures for regression tooling."
    },
    "variant": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Distinct variant identifier for grammar entries sharing the same headword."
    }
  },
  "additionalProperties": true
}
